<%= render partial: "layouts/flash_message" %>

<div class="jumbotron text-center">
  <h1> Photo's Ready! </h1>
</div>

<div class="items-list">
  <div class="row">

    <div class="col-md-3">
          <%= render partial: "layouts/sidebar" %>
    </div>

    <div class="col-md-9 text-center">
      <div class="well">
        <h2> Popular Photographs </h2>
      </div>
      <%= render partial: "layouts/photos" %>
    </div>
  </div>

  <div class="row">
    <div class="col-md-offset-3 col-md-9 text-center">
      <div class="well">
        <h2> Popular Photographers</h2>
      </div>
      <div class="row item-info item-list">
        <% 3.times do %>
          <div class="col-sm-4 col-lg-4 col-md-4 item-box">
            <h4> Photographer B </h4>
            <div class="thumbnail">
              <%= link_to image_tag('http://placehold.it/320x150', alt: "A picture", class: "item-image"), "#" %>
              <div class="caption">
                <h4 class="pull-right"><%= number_to_currency(10.00) %></h4>
                <h4> <%= link_to "Picture Name", "#" %> </h4>
                <p> <%= "Blah blah blah this is the description" %> </p>
              </div>
              <p> <%= button_to "Add to Cart", "#", method: :post, class: "btn btn-primary btn-large center-block" %> </p>
            </div>
          </div>
        <% end %>
      </div>


    </div>
  </div>

</div>


