<%= render partial: "layouts/page_title", locals: { page_title: "All Meals" } %>
<%= render partial: "layouts/flash_message" %>

<div class="items-list">
  <div class="row">
    <div class="col-md-3">
      <%= render partial: "layouts/category_list" %>
    </div>

    <div class="col-md-9">
      <div class="row item-info item-list">

        <% 10.times do %>
          <div class="col-sm-4 col-lg-4 col-md-4 item-box">
            <div class="thumbnail">
              <%= link_to image_tag('http://placehold.it/320x150', alt: "A picture", class: "item-image"), "#" %>
              <div class="caption">
                <h4 class="pull-right"><%= number_to_currency(10.00) %></h4>
                <h4>
                  <%= link_to "Picture Name", "#" %>
                </h4>

                <p>
                  <%= "Blah blah blah this is the description" %>
                </p>
              </div>
              <p>
                <%= button_to "Add to Cart", "#", method: :post, class: "btn btn-primary btn-large center-block" %>
              </p>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>


