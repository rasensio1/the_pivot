<div class="container">

  <% unless @store.active? %>
    <div class="row">
      <p id="store-deactivated-message">
        This store is not currently activated. No photos will be available for purchase!
      </p>
    </div>
  <% end %>

  <div class="row">
    <div class="col-md-6">
      <h1><%= @store.name %></h1>

      <h3><%= @store.tagline %></h3>
    </div>

    <div class="col-md-6">
      <div class="row text-center">
        <%= link_to "Add a photo", new_store_photo_path(@store.slug), class: "btn btn-primary btn-lg" %>
        <%= link_to "View Store", store_photos_path(@store.slug), class: "btn btn-primary btn-lg" %>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-md-12 well">
      <%= render partial: "layouts/edit_store" %>
    </div>
  </div>

  <% if current_user.store == @store || current_user.platform_admin? %>
    <div class="row">
      <div class="col-md-12 well">
        <%= render partial: "layouts/store_admin", locals: { admins: @store_admins } %>

        <%= render partial: "layouts/add_admin" %>
      </div>
    </div>
  <% end %>


  <div class="row">
    <div class="col-md-12 well">
      <table class="table table-striped table-hover">
        <thead>
        <tr>
          <th>Image</th>
          <th>Title</th>
          <th>Category</th>
          <th>Description</th>
          <th>Standard Price</th>
          <th>Links</th>
        </tr>
        </thead>
        <tbody id="active-photos">
        <%= render partial: "layouts/admin_photo", collection: @photos %>
        </tbody>
      </table>
    </div>
  </div>

</div>
