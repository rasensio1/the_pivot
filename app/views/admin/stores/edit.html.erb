<div class = "container">
  <div class = "row">
    <div class = "col-md-6">
      <h1><%= @store.name %></h1>
      <h3><%= @store.tagline %></h3>
    </div>
    <div class = "col-md-6 pull-right">
      <div class = "row">
        <%= link_to "Add a photo", new_store_photo_path(@store.slug), class: "btn btn-primary" %>
        <%= link_to "View Store", store_photos_path(@store.slug), class: "btn btn-primary" %>
      </div>
    </div>
  </div>

  <div class = "row">
    <div class = "col-md-12 well">
      <%= render partial: "layouts/edit_store" %>
    </div>
    </div>
  <div class = "row">
    <div class = "col-md-12 well">
      <%= render partial: "layouts/add_admin" %>
    </div>
  </div>

  <div class="well">
  <table class="table table-striped table-hover">
    <thead>
      <tr>
        <th>Image</th>
        <th>Title</th>
        <th>Description</th>
        <th>Standard Price</th>
        <th>Commercial Price</th>
        <th>Links</th>
      </tr>
    </thead>
    <tbody>
      <%= render partial: "layouts/admin_photo", collection: @photos %>
    </tbody>
  </table>
</div>
</div>
