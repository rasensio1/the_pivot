<div class = "container">
  <div class = "row">
    <div class = "col-md-6">
      <h1><%= @store.name %></h1>
      <h3><%= @store.tagline %></h3>
    </div>
    <div class = "col-md-6 pull-right">
      <div class = "row">
        <div class = "col-md-10">
          <%= render partial: "layouts/edit_store" %>
        </div>
        <div class = "col-md-2">
          <%= link_to "Add a photo", new_admin_photo_path, class: "btn btn-primary btn-lg" %>
        </div>
      </div>
    </div>
  </div>

  <div class="container well">
  <table class="table table-striped table-hover">
    <thead>
      <tr>
        <th>Image</th>
        <th>Title</th>
        <th>Description</th>
        <th>Standard Price</th>
        <th>Commercial Price</th>
        <th>Links</th>
      </tr>
    </thead>
    <tbody>
      <%= render partial: "layouts/admin_photo", collection: @photos %>
    </tbody>
  </table>
</div>
</div>
