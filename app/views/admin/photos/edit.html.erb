<%= render partial: "layouts/page_title", locals: { page_title: "Edit Meal" } %>
<div class="row">
  <div class="col-lg-12">
    <div class="admin-item-form">

      <%= form_for [:admin, @photo] do |f| %>
        <div class="form-group">
          <%= f.label :title %>
          <%= f.text_field :title, class: "form-control" %>
        </div>

        <div class="form-group">
          <%= f.label :description %>
          <%= f.text_field :description, class: "form-control" %>
        </div>

        <div class="form-group">
          <%= f.label :standard_price %>
          <%= f.text_field :standard_price, class: "form-control" %>
        </div>

        <div class="form-group">
          <%= f.label :commercial_price %>
          <%= f.text_field :commercial_price, class: "form-control" %>
        </div>

        <div class="form-group">
          <%= f.label :image_url %>
          <%= f.text_field :image_url, class: "form-control" %>
        </div>

        <%= f.hidden_field :store_id, value: current_user.store.id %>

        <%= f.submit "Submit", class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
</div>
