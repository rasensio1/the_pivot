<div class = "container" >
  <%= render partial: "layouts/page_title", locals: { page_title: "Add a Photo" } %>
  <%= render partial: "layouts/errors" %>
  <div class="row">

    <div class="col-lg-12">

      <div class="admin-item-form">

        <%= form_for [:admin, @photo], url: store_photos_path(@store.slug) do |f| %>
          <div class="form-group">
            <%= f.label :title %>
            <%= f.text_field :title, class: "form-control" %>
          </div>

          <div class="form-group">
            <%= f.label :description %>
            <%= f.text_field :description, class: "form-control" %>
          </div>

          <div class="form-group">
            <%= f.label :standard_price %>
            <%= f.text_field :standard_price, class: "form-control" %>
          </div>

          <div class="form-group">
            <%= f.label :commercial_price %>
            <%= f.text_field :commercial_price, class: "form-control" %>
          </div>

          <div class="form-group">
            <%= f.label :file %>
            <%= f.file_field :file, class: "form-control" %>
            <%= f.hidden_field :file_cache %>
          </div>

          <div class = "form-group">
            <h4><%= f.label :categories, class: "form-label" %></h4>
            <div class = "row">
              <%= collection_check_boxes(:photo, :category_ids, Category.all, :id, :name, :item_wrapper_class => 'checkbox_container' ) do |b| %>
                <div class = "col-md-6">
                  <%= b.label %>
                  <%= b.check_box %>
                </div>
              <% end %>
            </div>
          </div>

          <%= f.hidden_field :store_id, value: current_user.store.id %>

          <%= f.submit "Create Photo", class: "btn btn-primary" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
