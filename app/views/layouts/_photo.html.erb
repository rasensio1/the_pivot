<div class="col-sm-4 col-lg-4 col-md-4 item-box">
  <div class="thumbnail">
    <%= link_to image_tag(photo.file_url(:preview), alt: "A picture", class: "item-image"), store_photo_path(photo.store.slug, photo) %>
    <div class="caption">
      <h4 class="pull-right"><%= dollars(photo.standard_price) %></h4>
      <h4><%= link_to photo.title, store_photo_path(photo.store.slug, photo) %></h4>

      <p><%= photo.shortened_description %></p>
      <div class="text-center">
        <%= link_to "Add to Cart", cart_items_path(photo_id: photo.id), method: :post, class: "btn btn-primary btn-large" %>
      </div>
    </div>
  </div>
</div>
