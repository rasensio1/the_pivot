<div class="row item-info item-list">
  <% @photos.each do |photo| %>
    <div class="col-sm-4 col-lg-4 col-md-4 item-box">
      <div class="thumbnail">
        <%= link_to image_tag(photo.image_url, alt: "A picture", class: "item-image"), photo_path(photo) %>
        <div class="caption">
          <h4 class="pull-right"><%= number_to_currency(photo.standard_price_dollars) %></h4>
          <h4><%= link_to photo.title, photo_path(photo) %></h4>
          <p><%= photo.description %></p>
        </div>
        <p>
          <%= button_to "Add to Cart", cart_items_path(photo_id: photo.id), method: :post, class: "btn btn-primary btn-large center-block" %>
        </p>
      </div>
    </div>
  <% end %>
</div>
