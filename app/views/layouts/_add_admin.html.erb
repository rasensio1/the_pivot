<%= form_for [:admin, @user], url: admin_store_admins_path, html: { class: 'form-inline admin-form' } do |f| %>
  <div class="form-group">
    <%= f.submit "Add New Admin", class: "btn btn-primary" %>
    <%= f.hidden_field :store_id, value: @store.id, class: "form-control" %>
  </div>
  <div class="form-group edit-store-input">
    <%= f.email_field :email, class: "form-control", placeholder: "Email Address" %>
  </div>
<% end %>
