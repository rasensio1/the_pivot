<div class="container">
  <div class="row">
    <div class="col-md-3">
      <h1><%= current_user.name.capitalize %>'s Profile</h1>
    </div>
    <div class = "col-md-3">
      <% if !current_user.store %> 
        <%= link_to "Create Store", new_store_path, class: "btn btn-primary" %>
      <% else %>  
        <%= link_to "My Store", edit_admin_store_path(current_user.store), class: "btn btn-primary" %>
      <% end %> 
    </div>
  </div>

  <div class="row">
    <div class="col-md-3"><h4>Account Information</h4></div>
    <div class="col-md-9"></div>
  </div>

  <div class="table-responsive">
    <table class="table table-striped profile">

      <tr>
        <th>Name</th>
        <th>Email</th>
      </tr>
        <tr class="user-info">
          <td><%=current_user.name%></td>
          <td><%=current_user.email%></td>
          <td><%= link_to "Edit Profile", profile_edit_path(id: current_user.id), class: 'btn btn-primary' %></td>
        </tr>
    </table>
  </div>
</div>
