<div class="container">
  <div class="container">
    <div class="row">
      <div class="col-md-6 well">
        <h1 id="page-title"><%= current_user.name.capitalize %>'s Profile</h1>
      </div>
      <div class="col-md-6 text-center">
        <% if !current_user.store %>
          <%= link_to "Create Store", new_store_path, class: "btn btn-primary btn-lg" %>
        <% else %>
          <%= link_to "My Store", admin_store_path(current_user.store.slug), class: "btn btn-primary" %>
        <% end %>
      </div>
    </div>
  </div>

  <div class="container">
    <div class="row well">
      <div class = "col-md-5">
        <table class="table profile">
          <tr>
            <th>Name</th>
            <th>Email</th>
            <th></th>
          </tr>
            <tr class="user-info">
              <td><%=current_user.name%></td>
              <td><%=current_user.email%></td>
              <td><%= link_to "Edit Profile", profile_edit_path(id: current_user.id), class: 'btn btn-primary' %></td>
            </tr>
        </table>
      </div>
      <div class = "col-md-7">
        <% if current_user.stores %>
            <h3 class = "text-center">Admin for</h3>
            <ul> <%= render partial: "layouts/admin_store", collection: @admin_stores %></ul>
        <% end %>
      </div>
    </div>
  </div>

<div class="container well transparent" id="order-history">
  <div class="row">
    <div class="col-md-4"><h2>Order History</h2></div>
  </div>
  <div class="row">
    <div class="col-md-12">
      <table class="table table-striped table-hover">
        <thead>
        <tr>
          <th>Date</th>
          <th>Order #</th>
          <th>Images Ordered</th>
          <th>Total</th>
        </tr>
        </thead>
        <tbody>
        <% @orders.each do |order| %>
          <tr>
            <td><%= order.created_at.strftime("%m/%d/%Y") %></td>
            <td id="order-number-<%= order.id %>"><%= link_to order.id, order %></td>
            <td id="order-image-count-<%= order.id %>"><%= order.order_items.count %></td>
            <td id="order-total-<%= order.id %>"><%= dollars(order.total) %></td>
          </tr>
        <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>

  <div class="container well transparent"</div>
    <div class="row">
      <div class="col-md-4"><h2>Download Center</h2></div>
    </div>
    <div class="row">
      <div class="col-md-12">
        <div>
          <% @photos.each do |photo| %>
            <%= link_to image_tag(photo.image_url, size: "100"), store_photo_path(photo.store.slug, photo) %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
</div>

</div>
