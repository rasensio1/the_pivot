<div class="container">
  <div class="row">
    <div class="col-md-12">

      <h1>You are all Powerful!</h1>

      <table class="table table-striped table-hover well">
        <thead>
        <tr>
          <th>Store</th>
          <th>Tagline</th>
          <th>Status</th>
        </tr>
        </thead>
        <tbody>
          <% @stores.each do |store| %>
          <tr>
            <td><%= link_to store.name, admin_store_path(store.slug) %></td>
            <td><%= link_to store.tagline, admin_store_path(store.slug) %></td>
            <td>
              <%= form_for ["admin", store], url: admin_store_path(store.slug) do |f| %>
                  <%= f.check_box :active %>
                  <%= f.hidden_field :id, value: store.id %>
                  <%= f.submit "Update", class: "btn" %>
              <% end %>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>

    </div>
  </div>
</div>

